#include <stdio.h>
#include <math.h>
#define pi 3.14159 
int main (){
    double raio, area, volume;
    printf ("Insira o valor do raio: ");
    scanf ("%lf", &raio);
    volume = ((4 * pi) * (pow(raio, 3)))/3;
    area = (4 * pi) * (pow(raio, 2));
    printf ("area = %.2lf volume = %.2lf", area, volume);



}
